{
  "name": "budgetium-core",
  "version": "1.0.0",
  "main": "index.js",
  "author": "keith3895 <keith30895@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.24.0",
    "apollo-server-express": "^2.24.0",
    "axios": "^0.24.0",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "graphql": "^15.7.2",
    "mongodb": "^3.7.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "lint": "tslint -p tsconfig.json",
    "watch": "ts-node-dev --inspect --respawn ./src/index.ts",
    "build": "tsc -p tsconfig.json",
    "precontainerize": "npm run build",
    "containerize": "docker build -t budgetium-core/$npm_package_version .",
    "postcontainerize": "sed 's/{{version}}/'$npm_package_version'/' docker-compose.template.yml > docker-compose.yml",
    "test": "mocha --exit -r ts-node/register \"tests/**/*.spec.ts\"",
    "coverage": "nyc npm run test",
    "coverage-upload": "nyc --reporter=lcov --reporter=cobertura npm test && codecov"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "codecov": "^3.8.2",
    "mocha": "^8.4.0",
    "nock": "^13.0.11",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
